FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build
WORKDIR /src

COPY ./DroolTool.Models ./DroolTool.Models
COPY ./DroolTool.EFModels ./DroolTool.EFModels
COPY ./DroolTool.API ./DroolTool.API
COPY ./DroolTool.API/sitka.localhost.rootca.crt /usr/local/share/ca-certificates/sitka.localhost.rootca.crt
RUN chmod 644 /usr/local/share/ca-certificates/sitka.localhost.rootca.crt && update-ca-certificates

RUN dotnet publish ./DroolTool.API/DroolTool.API.csproj -c Release -o /app

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS final
WORKDIR /app
COPY --from=build /app /app
RUN ls -la
EXPOSE 80
ENTRYPOINT ["dotnet", "DroolTool.API.dll"]
